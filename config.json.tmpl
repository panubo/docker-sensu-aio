{
  "rabbitmq": {
{{- if (has .Env "SENSU_SSL") }}
    "ssl": {
      "cert_chain_file": "{{ .Env.SENSU_CLIENT_CERT }}",
      "private_key_file": "{{ .Env.SENSU_CLIENT_KEY }}"
    },
    "port": 5671,
{{- else }}
    "port": 5672,
{{- end }}
    "host": "127.0.0.1",
    "user": "{{ .Env.SENSU_RABBITMQ_SERVER_USER }}",
    "password": "{{ .Env.SENSU_RABBITMQ_SERVER_PASS }}",
    "vhost": "{{ .Env.SENSU_RABBITMQ_VHOST }}"
  },
  "redis": {
    "host": "127.0.0.1",
    "port": 6379
  },
  "api": {
    "host": "127.0.0.1",
    "port": 4567
  }
}
